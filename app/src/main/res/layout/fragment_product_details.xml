<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProductDetailsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/product_image_slider"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:dotsColor="@color/md_theme_onPrimary"
                app:dotsCornerRadius="8dp"
                app:dotsSize="15dp"
                app:dotsSpacing="4dp"
                app:dotsWidthFactor="2.5"
                app:progressMode="true"
                app:selectedDotColor="@color/md_theme_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/product_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LED Night Light USB Charging Intelligent Human Induction For Bedside Cabinet Home Wardrobe Lighting Motion Sensor Light Led Lamp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/product_details_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:progressBackgroundTint="@color/md_theme_onPrimary"
                    android:progressTint="#E90010"
                    android:rating="4.5" />

                <TextView
                    android:id="@+id/product_details_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="LKR 2500.00"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <!--  Need to complete  -->

                <LinearLayout
                    android:id="@+id/product_details_attribute_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="@color/md_theme_inversePrimary_mediumContrast"
                        android:text="-"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/product_details_quantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="1"

                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="@color/md_theme_inversePrimary_mediumContrast"
                        android:text="+"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Available Qty: "
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/product_details_avb_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="590dp"
                android:background="@color/md_theme_secondary">

            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/md_theme_primaryContainer"
        android:orientation="horizontal"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/product_details_btn_add_cart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#2196F3"
            android:foreground="?attr/selectableItemBackground"
            android:text="Add to Cart"
            android:textColor="@color/md_theme_onPrimary"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/product_details_btn_buy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#1C831D"
            android:foreground="?attr/selectableItemBackground"
            android:text="Buy Now"
            android:textColor="@color/md_theme_onPrimary"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>